<div class="container d-flex mt-4 mb-5 p-5 py-4 border shadow-lg" style="background-color: #b8f0f5; border-radius: 20px;">
  <div class="row w-100 gap-3 py-2 flex-between">
    <div class="col col-lg-3 p-auto d-flex justify-content-center align-items-center">
      <%= image_tag 'default-profile-picture.jpg', size: "300x250" %>
    </div>

    <div class="col col-lg-8 d-flex flex-column justify-content-between">      
      <%= form_with(model: user) do |form| %>
        <% if user.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(user.errors.count, "error") %> prevented this user from being saved:</h4>
            <ul>
              <% user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :full_name, class: "form-label fw-bold" %>
          <%= form.text_field :full_name, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: "form-label fw-bold" %>
          <%= form.text_field :email, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: "form-label fw-bold" %>
          <%= form.password_field :password, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="mb-3">
          <%= form.label :user_type, class: "form-label fw-bold" %>
          <%= form.select :user_type, ["Student", "Professor", "Admin"], {}, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="mb-3">
          <%= form.label :college_name, class: "form-label fw-bold" %>
          <%= form.text_field :college_name, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="d-flex justify-content-end">
          <%= form.submit "Save Changes", class: "btn btn-success text-white fw-bold px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
