<p style="color: green"><%= notice %></p>

<h1 class="mt-5 ms-5 fw-bold text-success">Account Detail</h1>

<div id="users" class="w-100">
  <% @users.each do |user| %>
    <%= render user %>
    <div class="d-flex justify-content-between align-items-center">
      <p class="ms-auto me-5 px-3">
        <%= link_to "Update Account", user, class: "btn btn-info text-white fw-bold px-3" %>
      </p>
    </div>
  <% end %>
</div>

