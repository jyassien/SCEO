<p style="color: green"><%= notice %></p>

<%= render @event %>

<div class="mx-5 mt-3" style="width: 93%; ">
  <div class="d-flex justify-content-between">
    <%= link_to "< Return", events_path,  class: "btn btn-outline-info text-success fw-bold px-4",  style:"color: white; text-decoration: none; border: solid 2px;" %> 
    <div class="d-flex gap-4">
      <%= button_to "Delete Event", @event, method: :delete, class: "btn btn-danger text-white fw-bold px-3 "  %>
      <%= link_to "Edit Event", edit_event_path(@event), class: "btn btn-warning text-white fw-bold px-3 " %>
    </div>
  </div>
</div>




