<p  class="text-center fs-2 text-info"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="fw-bold text-success ms-4">Events</h1>
  <div class="d-flex">
    <div class="dropdown">
      <button
        class="btn btn-secondary dropdown-toggle"
        type="button"
        data-bs-toggle="dropdown"
        aria-expanded="false">
        Filter Events
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Action</a></li>
        <li><a class="dropdown-item" href="#">Another action</a></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
      </ul>
    </div>
    <div
      class="ms-2 btn btn-outline-success create-event-btn fw-bold"
      style="border: 2px solid">
      <%= link_to "Creat Event", new_event_path, class:"px-3",
      style:"text-decoration: none; " %>
    </div>
  </div>
</div>

<div id="events" class="events-wrapper">
  <% @events.each do |event| %> <%= render event %> <% end %>
</div>

<style>
  .create-event-btn:hover {
    background-color: #28a745;
    color: white;
  }
  .create-event-btn a {
    color: #015915;
  }
  .create-event-btn:hover a {
    color: white;
  }
  .events-wrapper {
    margin-bottom: 300px;
  }
</style>
