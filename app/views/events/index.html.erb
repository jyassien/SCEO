<p  class="text-center fs-2 text-info"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="fw-bold text-success ms-4">Events</h1>
  <div class="d-flex">
    <div class="filter dropdown">
      <button
        class="btn dropdown-toggle <%= @selected_filter.present? ? 'btn-primary' : 'btn-secondary' %>"
        type="button"
        data-bs-toggle="dropdown"
        aria-expanded="false">
        <%= @selected_filter || "Filter Events" %>
      </button>
      <ul class="dropdown-menu">
        <% Event::FILTER_OPTIONS.each do |filter| %>
          <li>
            <%= link_to filter, events_path(filter: filter),
                class: "dropdown-item #{'active' if filter == @selected_filter}" %>
          </li>
        <% end %>
      </ul>
    </div>
    
    <div
      class="ms-2 btn btn-outline-success create-event-btn fw-bold"
      style="border: 2px solid">
      <%= link_to "Creat Event", new_event_path, class:"px-3",
      style:"text-decoration: none; " %>
    </div>
  </div>
</div>

<div id="events" class="events-wrapper">
  <% @events.each do |event| %> 
   
    <%= render 'event', event: event %> 
  <% end %>
</div>

<style>
  .create-event-btn:hover {
    background-color: #28a745;
    color: white;
  }
  .create-event-btn a {
    color: #015915;
  }
  .create-event-btn:hover a {
    color: white;
  }
  .events-wrapper {
    margin-bottom: 300px;
  }
  .filter .btn-primary {
    background-color: #28a745;
    color: white; 
    border-color: #28a745;
  }
  
  .filter .btn-primary:hover {
    background-color: #218838; 
    color: white;
  }
  .filter .dropdown-menu .dropdown-item.active {
    font-weight: bold;
    color: white;
    background-color: #015915;
  }
</style>
