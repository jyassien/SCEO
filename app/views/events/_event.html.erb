<div id="<%= dom_id event %>" class="container d-flex mb-3 ps-2 border">
  <div class="row w-100 gap-1 py-2 flex-between border">
    <div class="col col-lg-3 p-auto border">
      <%= image_tag 'default-event-picture.jpg', size: "300x250" %>
    </div>

    <div class="col col-lg-8 border">
      <div class="d-flex justify-content-between mb-3">
        <div>
          <strong>Title:</strong>
          <%= event.title %>
        </div>
        <div class="">
          <%= image_tag 'default-profile-picture.jpg', size: "50x50" %>
          <strong>User:</strong>
          <%= event.user_id %>
        </div>
      </div>

      <div class="">
        <p>
          <strong>Description:</strong>
          <%= event.description %>
        </p>

        <p class="">
          <%= image_tag 'location-pin-star.png', size: "40x40" %>
          <%=event.location %>
        </p>

        <p class="">
          <%= image_tag 'time-attendance-management.png', size: "50x40" %> <%=
          event.start_time %> to <%= event.end_time %>
        </p>
      </div>

      <div class="">
        <div class="progress">
          <div
            class="progress-bar progress-bar-striped bg-success progress-bar-animateddd"
            role="progressbar"
            style="width: 25%"
            aria-valuenow="25"
            aria-valuemin="0"
            aria-valuemax="100"></div>
        </div>
        <div class="ms-2 fs-5">25/100</div>
      </div>

      <div class="border d-flex justify-content-between mt-4">
        <div class="btn btn-info text-white">
          <%= link_to "Show this event", event %>
        </div>
        <div class="d-flex justify-content-end">
          <div class="me-4 btn border-info">
            <strong class="text-info fw-bold">Registered:</strong>
            <span class="fw-bold"><%= 25 %></span>
          </div>
          <div class="me-4 btn border-info">
            <strong class="text-info fw-bold">Status:</strong>
            <span class="fw-bold"><%= event.status %></span>
          </div>
          <div class="dropdown">
            <button
              class="btn btn-secondary dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false">
              Flag Event
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Action</a></li>
              <li><a class="dropdown-item" href="#">Another action</a></li>
              <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
