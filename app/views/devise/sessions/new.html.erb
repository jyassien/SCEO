<div class="form-wrapper d-flex flex-column my-5  px-3 shadow-lg" style="background-color: #b8f0f5; border-radius: 20px;">
  <p class="notice text-center text-danger"><%= notice %></p>
  <p class="alert text-center text-danger"><%= alert %></p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="fs-4 fw-bolder d-flex justify-content-between ms-3 w-50">  
      <div>
        <div class="mt-1">
          <%= f.label :email, style: "display: block" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-1", style: "width: 140%;" %>
        </div>

        <div class="mt-3">
          <%= f.label :password, style: "display: block" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-1", style: "width: 140%;" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mt-3">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-4" style="width: 140px;">
      <%= f.submit "Log in", class: "btn btn-success text-white  fw-bold mt-4 p-2 px-5", style: "margin-left: 20px; width: 160px;" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
