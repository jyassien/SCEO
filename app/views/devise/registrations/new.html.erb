<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |form| %>

<div class="form-wrapper d-flex flex-column my-5 py-5 px-3 shadow-lg " style="background-color: #b8f0f5; border-radius: 20px;">
  <% if resource.errors.any? %>
   <div style="color: red">
     <h2><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h2>
     <ul>
        <% resource.errors.each do |error| %>
          <li><%= error.full_message %></li>
       <% end %>
     </ul>
    </div>
  <% end %>
  <div class="fs-4 fw-bolder d-flex justify-content-between ms-3 w-50">  
  <div>
    <div class="mt-3">
      <%= form.label :full_name, style: "display: block" %>
      <%= form.text_field :full_name, class: "form-control mt-1", style: "width: 140%;" %>
    </div>

  <div class="mt-3">
    <%= form.label :user_type, style: "display: block" %>
    <%= form.select :user_type, ["Student", "Professor", "Admin"], {}, class: "form-control mt-1", style: "width: 140%;"  %>
  </div>

  <div class="mt-3">
    <%= form.label :college_name, style: "display: block" %>
    <%= form.text_field :college_name, class: "form-control mt-1", style: "width: 140%;" %>
  </div>
</div>
  <div>
    <div class="mt-3">
      <%= form.label :email, style: "display: block" %>
      <%= form.email_field :email, class: "form-control  mt-1  ", style: "width: 140%;"  %>
    </div>
    <div class="mt-3">
      <%= form.label :password, style: "display: block" %>
      <%= form.password_field :password, class: "form-control  mt-1  ", style: "width: 140%;"  %>
    </div>
  </div>
</div>

<div class="w-75 ms-5 text-center">
    <%= form.submit "Create Account", class: "btn btn-success text-white text-end fw-bold mt-4 p-2 px-5", style: "margin-left: 100px;" %>
</div>
</div>
<% end %>
