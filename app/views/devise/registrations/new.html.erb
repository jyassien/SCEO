<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <% if resource.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% resource.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div>
    <%= form.label :user_type, style: "display: block" %>
    <%= form.select :user_type, ["admin", "professor", "student"], {}, class: "form-control" %>
  </div>

  <div>
    <%= form.label :college_name, style: "display: block" %>
    <%= form.text_field :college_name, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>
